@model IEnumerable<Notas.Models.Nota>

@{
    ViewBag.Title = "MIS NOTAS";
}

<h2>MIS NOTAS</h2>

<p>
    @Html.ActionLink("Nueva Nota", "AgregarNota")
</p>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.id }) |
                @Html.ActionLink("Ver", "Ver", new { id = item.id }) |
                @Html.ActionLink("Borrar", "Borrar", new { id = item.id }, new { @class = "notaElimina" })
            </td>
        </tr>
    }

</table>
@section scripts{
    <script>
        $(".notaElimina").click(function (event) {
            if (!confirm('Estas seguro de borra la nota?')) {
                event.preventDefault();
            }
        }
    </script>
}
